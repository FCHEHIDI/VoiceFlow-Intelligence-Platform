# Application
APP_NAME=VoiceFlow ML Service
APP_VERSION=1.0.0
DEBUG=false

# API
API_V1_PREFIX=/api
HOST=0.0.0.0
PORT=8000

# Database
POSTGRES_USER=voiceflow
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=voiceflow

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rust Inference Service
RUST_SERVICE_URL=http://inference-engine:3000
RUST_SERVICE_TIMEOUT=30

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Model Storage
MODELS_DIR=../models
DATA_DIR=../data

# Training
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=0.001
DEFAULT_EPOCHS=50

# Audio Processing
SAMPLE_RATE=16000
AUDIO_MAX_DURATION_SECONDS=1800
AUDIO_MAX_SIZE_MB=100

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
